<main class="flex-grow-1">
    <div class="container-fluid">
        {{!-- TITLE --}}
        <div class="row mb-2 align-items-center">
            <div class="col d-flex justify-content-between align-items-center">
                <h2 class="m-4 colour_tab mb-0">Checkout</h2>
                <a href="/cart" class="btn btn-outline-danger me-4">Back to Cart</a>
            </div>
        </div>

        <hr class="border border-danger border-3 mx-5 opacity-100">

        
        <div id="checkoutContent" class="row px-4 px-md-5 g-4 align-items-start">

            
            <div class="col-12 col-lg-7">
                {{!-- BILLING DETAILS --}}
                <div class="card p-3 mb-4">
                    <h5 class="mb-3">Billing Details</h5>

                    <form id="checkoutForm">
                        <div class="row g-3">
                            <div class="col-12 col-md-6">
                                <label class="form-label">First Name <span class="text-danger">*</span></label>
                                <input class="form-control" id="firstName" name="firstName" required>
                            </div>

                            <div class="col-12 col-md-6">
                                <label class="form-label">Last Name <span class="text-danger">*</span></label>
                                <input class="form-control" id="lastName" name="lastName" required>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Email <span class="text-danger">*</span></label>
                                <input class="form-control" id="email" type="email" name="email" required>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Address line 1 <span class="text-danger">*</span></label>
                                <input class="form-control" id="address1" name="address1" required>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Address line 2</label>
                                <input class="form-control" id="address2" name="address2" placeholder="optional">
                            </div>

                            <div class="col-12 col-md-6">
                                <label class="form-label">City <span class="text-danger">*</span></label>
                                <input class="form-control" id="city" name="city" required>
                            </div>

                            <div class="col-12 col-md-6">
                                <label class="form-label">Eircode</label>
                                <input class="form-control" id="eircode" name="eircode" placeholder="optional">
                            </div>

                            <div class="col-12">
                                <label class="form-label">Notes</label>
                                <textarea class="form-control" name="notes" rows="3" placeholder="optional"></textarea>
                            </div>
                        </div>
                    </form>
                </div>

                {{!-- CARD DETAILS --}}
                <div class="card p-3 my-2">
                    <h5 class="mb-3">Card Details <span class="text-danger">*</span></h5>

                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label">Card Number <span class="text-danger">*</span></label>
                            <input class="form-control" placeholder="1234 5678 9012 3456" maxlength="19" required
                                form="checkoutForm">
                        </div>

                        <div class="col-6 col-md-4">
                            <label class="form-label">Expiry <span class="text-danger">*</span></label>
                            <input class="form-control" placeholder="MM/YY" maxlength="5" required form="checkoutForm">
                        </div>

                        <div class="col-6 col-md-4">
                            <label class="form-label">CVC <span class="text-danger">*</span></label>
                            <input class="form-control" placeholder="123" maxlength="4" required form="checkoutForm">
                        </div>

                        <div class="col-12 col-md-4">
                            <label class="form-label">Name on Card <span class="text-danger">*</span></label>
                            <input class="form-control" placeholder="Full name" required form="checkoutForm">
                        </div>
                    </div>

                    <small class="text-muted mt-3 d-block">
                        *Demo only — no real payment is processed.
                    </small>
                </div>
            </div>

            {{!-- SUMMARY --}}
            <div class="col-12 col-lg-5">
                <div class="card p-3 mb-5">
                    <h5 class="mb-3">Order Summary</h5>

                    {{!-- Filled in with JS --}}
                    <div id="orderItems" class="mb-3"></div>

                    <hr>

                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Subtotal</span>
                        <span id="subtotalText">€0.00</span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Shipping</span>
                        <span id="shippingText">€0.00</span>
                    </div>

                    <div class="d-flex justify-content-between fw-bold mt-2">
                        <span>Total</span>
                        <span id="totalText">€0.00</span>
                    </div>

                    <div class="mt-4">
                        <button id="placeOrderBtn" class="btn btn-success btn-lg w-100" type="submit"
                            form="checkoutForm">
                            Place Order
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</main>