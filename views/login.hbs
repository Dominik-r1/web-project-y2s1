<main class="flex-grow-1">
    
    <div class="container py-5">

        <div class="alert alert-danger d-none" id="errormessage" role="alert">
            Email or password incorrect or account may not exist.
        </div>

        <div class="row justify-content-center">

            <div class="col-md-8">

                <div class="card shadow">

                    <div class="card-body p-4">
                    
                        <h2 class="text-center mb-4">Login:</h2>
                    
                        <form name="login" id="user-login" method="get">
                            <div class="form-group m-2">
                                <label for="emailAddressID">Email address</label>
                                <input type="email" class="form-control" id="emailAddressID" value="dominik@gmail.com" name="email" required>
                            </div>
                            <div class="m-2">
                                <label for="passwordID">Password</label>
                                <input type="password" class="form-control" id="passwordID" value="secret" name="password" required>
                            </div>
                            <div class="m-2">
                                <input type='submit' class="btn btn-primary" value="Login">
                            </div>
                        </form>
                        <p><a href="register">Need to Register?</a></p>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>